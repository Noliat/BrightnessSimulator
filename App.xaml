<Application x:Class="BrightnessSimulator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BrightnessSimulator"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://Application:,,,/Model/NotifyIconResources.xaml"/>
                <ResourceDictionary Source="pack://Application:,,,/Themes/SliderControl.xaml"/>
                <ResourceDictionary Source="pack://Application:,,,/Themes/LightTheme.xaml"/>
                <ResourceDictionary Source="pack://Application:,,,/Colors/Colors.xaml"/>
                <ResourceDictionary Source="pack://Application:,,,/Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
